{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":semanticCommitScope(deps)"
  ],
  "renovate-config-presets": {
    "enabled": false
  },
  "labels": ["dependencies", "renovate"],
  "timezone": "UTC",
  "schedule": [],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "groupName": "ansible-core (2.18.x only)",
      "matchPackageNames": ["ansible-core"],
      "allowedVersions": "/^2\\.18\\./"
    },
    {
      "description": "Keep community.general on 11.x for linux_system_roles compatibility",
      "matchDepNames": ["community.general"],
      "matchDatasources": ["galaxy-collection"],
      "allowedVersions": "/^11\\./"
    },
    {
      "description": "Pin community.vmware to 5.10.0 for ansible-core 2.18.13 compatibility",
      "matchDepNames": ["community.vmware"],
      "matchDatasources": ["galaxy-collection"],
      "allowedVersions": "/^5\\.10\\.0$/"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "ansible-core version in workflow env (ANSIBLE_CORE_VERSION)",
      "managerFilePatterns": ["/.github/workflows/.*\\.ya?ml/"],
      "matchStrings": ["ANSIBLE_CORE_VERSION:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "ansible-core",
      "versioningTemplate": "pep440"
    }
  ]
}
